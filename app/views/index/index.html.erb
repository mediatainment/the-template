<div class="jumbotron">
  <%= make_mercury('jumbotron-title', :simple, wrapper: :h1, i18n: true) %>
  <%= make_mercury('jumbotron-subtitle', :simple, wrapper: :h2, i18n: true) %>
  <%= make_mercury('jumbotron-content', :full, wrapper: :p, i18n: true) %>
  <%= make_mercury('jumbotron-snippets', :snippets) %>
  <%= make_mercury('jumbotron-image', :image, width: '100%', height: 'auto', data: {height: '200', width: '400'}) %>
</div>