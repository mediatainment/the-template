<%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.bootstrap_text_field :title %>
    </div>
    <div class="field">
      <%= f.bootstrap_text_field :subtitle %>
    </div>
    <div class="field">
      <%= f.bootstrap_text_area :content %>
    </div>
    <div class="checkbox">
      <label>
        <%= check_box_tag("article[published]", true, false) %>
        Published
      </label>
    </div>
    <div class="checkbox">
      <label>
        <%= check_box_tag("article[featured]", true, false) %>
        Featured
      </label>
    </div>
    <div class="field">
      <%= f.bootstrap_text_field :meta_description %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-default' %>
    </div>
<% end %>
