<%= form_for(@article) do |f| %>
    <%= errors_for @article %>

    <div class="field">
      <%= f.bootstrap_text_field :title %>
    </div>
    <div class="field">
      <%= f.bootstrap_text_field :subtitle %>
    </div>
    <div class="field">
      <%= f.bootstrap_text_area :content %>
    </div>
    <div class="checkbox">
      <label>
        <%= check_box_tag("article[published]", true, false) %>
        Published
      </label>
    </div>
    <div class="checkbox">
      <label>
        <%= check_box_tag("article[featured]", true, false) %>
        Featured
      </label>
    </div>
    <div class="field">
      <%= f.bootstrap_text_field :meta_description %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-default' %>
    </div>
<% end %>
