<% breadcrumb :categories %>
<h1><%= t('categories') %></h1>

<table class="table table-bordered">
  <tr>
    <th><%= t('name') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to t('show'), category %></td>
    <td><%= link_to t('edit'), edit_category_path(category) %></td>
    <td><%= link_to t('destroy'), category, method: :delete, data: { confirm: t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('new_resource', resource: t('category')), new_category_path, class: 'btn btn-default' %>
