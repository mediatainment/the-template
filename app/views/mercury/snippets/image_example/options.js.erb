$.getScript("/assets/dropzone.js", function () {

    $('.dropzone').dropzone({
        url: "/mercury/images",
        init: function () {
            this.on("addedfile", function (file) {
            });
            this.on("success", function (file, response) {
                $('#options_image_id').val(response['image']['id']);
            });
        }
    });
});