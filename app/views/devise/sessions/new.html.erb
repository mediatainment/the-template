<h2><%= t('login') %></h2>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.bootstrap_email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.bootstrap_password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('devise.session.stay_logged_in') %>
        </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t('login'), class: 'btn btn-submit' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
