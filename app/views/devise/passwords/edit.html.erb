<h2>Passwort ändern</h2>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.bootstrap_password_field :password, label: 'Neues Passwort', autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, label: 'Passwort wiederholen', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Passwort ändern", class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
