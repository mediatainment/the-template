<%= form_for(@user) do |f| %>
    <%= errors_for @user %>

    <div class="field">
      <%= f.bootstrap_text_field :email, label: t('email') %>
    </div>

    <div class="field">
      <%= f.bootstrap_text_field :username, label: t('username') %>
    </div>

    <div class="field">
      <%= f.bootstrap_password_field :password, label: t('password') %>
    </div>

    <div class="field">
      <%= f.bootstrap_password_field :password_confirmation, t('password_confirmation') %>
    </div>
    <div>
      <%= f.label :roles %> <br>
      <% for role in Role.all.sort %>
          <div class="checkbox">
            <label>
              <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
              <%= role.name %>
            </label>
          </div>
          <br>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit t('submit'), class: 'btn btn-default' %>
    </div>
<% end %>
