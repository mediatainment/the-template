<% breadcrumb :users %>
<h1><%= t('users') %></h1>

<table class="table table-bordered">
  <tr>
    <th><%= t('name') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('show'), user %></td>
        <td><%= link_to t('edit'), edit_user_path(user) %></td>
        <td><%= link_to t('destroy'), user, method: :delete, data: {confirm: t('are_you_sure')} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to t('new_resource', resource: t('user')), new_user_path, class: 'btn btn-default' %>
