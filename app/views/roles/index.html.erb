<% breadcrumb :roles %>

<h1><%= t('roles') %></h1>

<table class="table table-bordered">
  <tr>
    <th><%= t('name') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= link_to t('show'), role %></td>
    <td><%= link_to t('edit'), edit_role_path(role) %></td>
    <td><%= link_to t('destroy'), role, method: :delete, data: { confirm: t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('new_resource', resource: t('role')), new_role_path, class: 'btn btn-default' %>
